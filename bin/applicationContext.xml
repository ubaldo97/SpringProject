<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
    http://www.springframework.org/schema/beans   
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    http://www.springframework.org/schema/context 
    http://www.springframework.org/schema/context/spring-context-3.1.xsd
">
<!-- creaci[on de la dependencia -->
<bean id="miInforme" class="ejemplo.IoC.Informe"></bean>

<bean id="miEmpleado" class="ejemplo.IoC.DirectorEmpleado">
	<constructor-arg ref="miInforme"></constructor-arg>
	<property name="email" value="Directivos@ups.mx"></property>
	<property name="nombreEmpresa" value="Ups Empresa"></property>	
</bean>

<bean id="miSecretarioEmpleado" class="ejemplo.IoC.SecretarioEmpleado">
	<property name="informeNuevo" ref="miInforme"></property>
	<property name="email" value="secretaria@ups.mx"></property>
	<property name="nombreEmpresa" value="Ups Empresa"></property>	
</bean>

</beans>